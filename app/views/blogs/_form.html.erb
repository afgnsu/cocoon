<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, size: "40x10" %>
  </div>

  <div class="field">
    <table class="blog-photo-form">
      <tbody>
        <%= f.fields_for :photos do |photo| %>
          <%= render 'photo_fields', f: photo %>
        <% end %>
      </tbody>
    </table>
    <div class="links">
        <%= link_to_add_association "新增照片", f, :photos %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
